#!/usr/bin/env bash
# bin/detect <build-dir>

if [[ ! -f $1/.buildpacks && ( -f $1/requirements.txt || -f $1/composer.json || -f $1/index.php ) ]]; then
  echo "no" && exit 1
elif [ -d $1/.meteor ]; then
  echo "Node.js (Meteor)" && exit 0
elif [ -f $1/package.json -o -f $1/server.js ]; then
  echo "Node.js" && exit 0
else
  echo "no" && exit 1
fi

exit 1
